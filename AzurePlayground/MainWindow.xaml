<Window x:Class="AzurePlayground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzurePlayground"
        mc:Ignorable="d"
        Title="Azure Playgound" 
        Height="350" 
        Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="3"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <WrapPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button Click="CreateOrUpdateKeyVaultClick">Create Key Vault</Button>
            <Button Click="CreateSecretClick">Add Secret</Button>
        </WrapPanel>
    </Grid>
</Window>
